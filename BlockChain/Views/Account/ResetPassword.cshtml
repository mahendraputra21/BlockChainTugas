@model BlockChain.Models.ViewModels.ResetPasswordViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <title>Reset Password - Cookies</title>
    <link rel="stylesheet" href="~/css/reset-password.css" asp-append-version="true" />
</head>
<body>
    <div class="reset-container">
        <div class="reset-card">
            <h2 class="reset-title">RESET PASSWORD</h2>
            <p class="reset-description">Masukkan password baru kamu, ya!</p>

            @if (ViewBag.Message != null)
            {
                <p class="error-message">@ViewBag.Message</p>
            }

            <form asp-action="ResetPassword" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Email" />

                <div class="input-group">
                    <input asp-for="NewPassword" type="password" placeholder="Password baru" required />
                    <span asp-validation-for="NewPassword" class="error-message"></span>
                </div>

                <div class="input-group">
                    <input asp-for="ConfirmPassword" type="password" placeholder="Konfirmasi password" required />
                    <span asp-validation-for="ConfirmPassword" class="error-message"></span>
                </div>

                <button type="submit" class="reset-button">RESET</button>
                <div class="back-to-login">
                    <a href="/Account/Login">Kembali ke login</a>
                </div>
            </form>
        </div>
    </div>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>
</html>
