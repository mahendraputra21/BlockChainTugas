@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lupa Password - Cookies</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true">
    <link rel="stylesheet" href="~/css/forgot-password.css" asp-append-version="true">
</head>
<body>
    <div class="forgot-container">
        <div class="forgot-card">
            <div class="forgot-left">
                <img src="~/images/Logo.png" alt="Cookies Logo" class="logo">
            </div>
            <div class="forgot-right">
                <h2 class="forgot-title">LUPA PASSWORD</h2>
                <p class="forgot-description">Masukkan username dan email yang terdaftar untuk menerima kode pemulihan akun.</p>

                @if (ViewBag.Message != null)
                {
                    <p class="success-message">@ViewBag.Message</p> <!-- Menampilkan pesan sukses jika ada -->
                }

                @if (ViewBag.Error != null)
                {
                    <p class="error-message">@ViewBag.Error</p> <!-- Menampilkan pesan error jika ada -->
                }

                <form method="post" asp-controller="Account" asp-action="ForgotPassword">
                    <div class="input-group">
                        <input type="text" name="Username" placeholder="Username" required>
                    </div>
                    <div class="input-group">
                        <input type="email" name="Email" placeholder="Email" required>
                    </div>
                    <button type="submit" class="forgot-button">KIRIM</button>
                    <div class="back-to-login">
                        <a href="/Account/Login">Kembali ke halaman login</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
</html>
