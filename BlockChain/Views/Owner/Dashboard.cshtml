@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard - Cookies</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/ownerdashboard.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
</head>
<body>
    <partial name="Sidebar" /> <!-- Updated partial tag -->
    <div class="dashboard-wrapper">
        <div class="main-content">
            <h2 class="title">Dashboard</h2>

            <div class="cards">
                <div class="card-section">
                    <h3>Pelacakan Produk</h3>
                    <div class="card track">
                        <p class="count">1</p>
                        <button>LACAK PRODUK</button>
                    </div>
                </div>
                <div class="card-section">
                    <h3>Statistik Pengguna</h3>
                    <div class="card user-stats">
                        <div class="stats-row">
                            <div class="stat-box">
                                <div class="icon-box" ><i class="fas fa-user-tie"></i></div>
                                <div>Keuangan</div>
                                <span>1</span>
                            </div>
                            <div class="stat-box">
                                <div class="icon-box"><i class="fas fa-user-gear"></i></div>
                                <div>Gudang</div>
                                <span>1</span>
                            </div>
                            <div class="stat-box">
                                <div class="icon-box"><i class="fas fa-user-tag"></i></div>
                                <div>Distributor</div>
                                <span>1</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="table-only-section">
                <h3>Pelacakan Produk - Status Produk</h3>
                <div class="table-wrapper">
                    <table class="status-table">
                        <thead>
                            <tr>
                                <th>Kode Produk</th>
                                <th>Nama Produk</th>
                                <th>Kategori Produk</th>
                                <th>Status</th>
                                <th>Tanggal Mulai</th>
                                <th>Tujuan</th>
                                <th>Aksi</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>6544246890</td>
                                <td>Tepung</td>
                                <td>Bahan Makanan</td>
                                <td class="status red">Dikemas</td>
                                <td>26 Maret 2025</td>
                                <td>PT Blala</td>
                                <td><a href="#"><i class="fa fa-external-link-alt"></i></a></td>
                            </tr>
                            <tr>
                                <td>6544246839</td>
                                <td>Mentega</td>
                                <td>Bahan Makanan</td>
                                <td class="status blue">Dikirim</td>
                                <td>26 Maret 2025</td>
                                <td>PT Blala</td>
                                <td><a href="#"><i class="fa fa-external-link-alt"></i></a></td>
                            </tr>
                            <tr>
                                <td>6544246839</td>
                                <td>Mentega</td>
                                <td>Bahan Makanan</td>
                                <td class="status green">Selesai</td>
                                <td>26 Maret 2025</td>
                                <td>PT Blala</td>
                                <td><a href="#"><i class="fa fa-external-link-alt"></i></a></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
